{
  "name": "webpack-demo",
  "version": "1.0.0",
  "description": "",
  "main": "",
  "scripts": {

    "single-test": "./node_modules/.bin/mocha --compilers js:babel-register --require ./test/setup.js",

    "test": "./node_modules/.bin/mocha --compilers js:babel-register --require ./test/setup.js ./test/*.js ./test/**/*.js",
    "watch-test": "./node_modules/.bin/mocha --compilers js:babel-register --require ./test/setup.js ./test/*.js ./test/**/*.js --watch",
    "cover": "./node_modules/.bin/babel-node ./node_modules/isparta/bin/isparta cover --include \"**/*.js\" --include \"**/*.jsx\" --report text --report html ./node_modules/mocha/bin/_mocha -- --reporter dot --require ./test/setup.js ./test/*.js ./test/**/*.js",

    "build-css": "./node_modules/.bin/node-sass ./app/styles -o ./dist",
    "watch-css": "./node_modules/.bin/node-sass ./app/root.scss --watch ./dist/app.css",
    "lint-css": "./node_modules/.bin/sass-lint './app/styles/**/*.scss' -v",

    "build-js": "./node_modules/.bin/webpack",
    "watch-js": "./node_modules/.bin/webpack-dev-server --hot --inline",
    "lint-js": "./node_modules/.bin/eslint './app/**/*.js'",

    "watch": "npm run watch-css & npm run watch-js",
    "build": "npm run build-css && npm run build-js",
    "lint" : "npm run lint-css && npm run lint-js",
    "start": "npm run watch",

    "pretest": "npm run lint",
    "prebuild": "npm run test",
    "postbuild": "npm run cover"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "react": "^0.14.3",
    "react-dom": "^0.14.3"
  },
  "devDependencies": {
    "babel": "^6.3.26",
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.26",
    "babel-loader": "^6.2.0",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-register": "^6.3.13",
    "chai": "^3.4.1",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^3.1.0",
    "eslint-plugin-react": "^3.15.0",
    "file-loader": "^0.8.5",
    "isparta": "^4.0.0",
    "istanbul": "^0.4.1",
    "jsdom": "^7.2.2",
    "karma": "^0.13.19",
    "karma-chrome-launcher": "^0.2.2",
    "karma-mocha": "^0.2.1",
    "karma-requirejs": "^0.2.3",
    "mocha": "^2.3.4",
    "node-sass": "^3.4.2",
    "react-addons-test-utils": "^0.14.6",
    "react-hot-loader": "^1.3.0",
    "requirejs": "^2.1.22",
    "rewire": "^2.5.1",
    "sass-lint": "^1.4.0",
    "sinon": "^1.17.2",
    "skin-deep": "^0.13.2",
    "webpack": "^1.12.9",
    "webpack-dev-server": "^1.14.0"
  }
}
