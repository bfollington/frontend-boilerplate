{
  "name": "frontend-boilerplate",
  "version": "0.0.1",
  "description": "A workflow test project for frontend development",
  "scripts": {
    "single-test": "mocha --compilers js:babel-register --require ./test/setup.js",
    "test": "mocha --compilers js:babel-register --require ./test/setup.js ./test/*.js ./test/**/*.js",
    "watch-test": "mocha --compilers js:babel-register --require ./test/setup.js ./test/*.js ./test/**/*.js --watch",
    "cover": "babel-node ./node_modules/isparta/bin/isparta cover --include \"**/*.js\" --include \"**/*.jsx\" --report text --report html ./node_modules/mocha/bin/_mocha -- --reporter dot --require ./test/setup.js ./test/*.js ./test/**/*.js",
    "build-css": "node-sass ./app/styles -o ./dist",
    "watch-css": "npm run build-css && node-sass ./app/styles --watch -o ./dist",
    "lint-css": "sass-lint './app/styles/**/*.scss' -c sass-lint.yml -v",
    "build-js": "webpack",
    "watch-js": "webpack-dev-server --hot --inline",
    "lint-js": "eslint './app/**/*.js'",
    "watch": "concurrent \"npm run watch-js\" \"npm run watch-css\"",
    "build": "concurrent \"npm run build-css\" \"npm run build-js\"",
    "lint": "npm run lint-css && npm run lint-js",
    "start": "npm run watch",
    "prebuild": "npm run lint && npm run test",
    "postbuild": "npm run cover"
  },
  "author": "Ben Follington",
  "license": "ISC",
  "engines": {
    "node": ">=5.0"
  },
  "dependencies": {
    "bootstrap": "^3.3.6",
    "concurrently": "^1.0.0",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "skin-deep": "^0.14.0"
  },
  "devDependencies": {
    "babel": "^6.3.26",
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.26",
    "babel-loader": "^6.2.0",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-register": "^6.3.13",
    "chai": "^3.4.1",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^3.1.0",
    "eslint-plugin-react": "^3.16.1",
    "file-loader": "^0.8.5",
    "isparta": "^4.0.0",
    "istanbul": "^0.4.1",
    "mocha": "^2.3.4",
    "node-sass": "^3.4.2",
    "react-addons-test-utils": "^0.14.7",
    "react-hot-loader": "^1.3.0",
    "sass-lint": "^1.4.0",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0",
    "skin-deep": "^0.14.0",
    "webpack": "^1.12.12",
    "webpack-dev-server": "^1.14.1"
  }
}
